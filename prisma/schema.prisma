generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"  // local SQLite database
}

model Document {
  id        Int      @id @default(autoincrement())
  filename  String
  content   String
  type      String
  createdAt DateTime @default(now())
}

model Message {
  id        Int      @id @default(autoincrement())
  role      String
  content   String
  createdAt DateTime @default(now())
}
